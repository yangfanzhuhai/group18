# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.feed(toggle: Integer = 0)

GET     /about                      controllers.Application.about()
GET     /builds                     controllers.Application.feed(toggle: Integer = 3)
GET     /gits                       controllers.Application.feed(toggle: Integer = 2)
GET     /login                      controllers.Application.login()
GET     /tasks                      controllers.Application.feed(toggle: Integer = 1)
GET     /register                   controllers.Application.register()
GET     /profile		    controllers.Application.profile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/rest/feed					controllers.Rest.getActivities()
GET		/rest/morefeed				controllers.Rest.getMoreActivities()
GET		/rest/tasks					controllers.Rest.getTasks()
GET		/rest/alltasks				controllers.Rest.getAllTasks()
GET		/rest/git					controllers.Rest.getGits()
GET		/rest/builds				controllers.Rest.getBuilds()
GET		/rest/user					controllers.Rest.getUser()


POST	/rest/message				controllers.Rest.createMessage()
POST	/rest/register				controllers.Rest.registerUser()
POST	/rest/login					controllers.Rest.loginUser()

POST	/rest/git					controllers.Rest.parseGitHook()
POST	/rest/jenkins				controllers.Rest.parseJenkinsNotfication()

POST	/rest/update/task			controllers.Rest.updateStatusAndPriority()

POST	/rest/delete/post			controllers.Rest.deletePost()
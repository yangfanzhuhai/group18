# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Application.login()
GET     /:groupID                   	controllers.Application.feed(groupID, toggle: Integer = 0)

GET     /about                      	controllers.Application.about()
GET     /:groupID/builds            	controllers.Application.feed(groupID, toggle: Integer = 3)
GET     /:groupID/gits              	controllers.Application.feed(groupID, toggle: Integer = 2)
GET     /:groupID/login             	controllers.Application.login()
GET     /:groupID/tasks             	controllers.Application.feed(groupID, toggle: Integer = 1)
GET     /:groupID/register          	controllers.Application.register()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)

